<Window x:Class="KoleServis.MVVM.View.SuccessfulAction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoleServis.MVVM.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SuccessfulAction" Height="200" Width="300">
    <Grid>
        <TextBlock Text="{DynamicResource ActionPerformedSuccessfully}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Height="30" Click="OnOkClicked"/>

    </Grid>
</Window>
