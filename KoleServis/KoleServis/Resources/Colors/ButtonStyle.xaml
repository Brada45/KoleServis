<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatSecondaryMidBgButton}">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="FontFamily" Value="{DynamicResource font}" />
        <Setter Property="FontWeight" Value="{DynamicResource Weight}" />
        <Setter Property="FontStyle" Value="{DynamicResource Style}" />
    </Style>

    <Style x:Key="CommandButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedDarkButton}">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="FontFamily" Value="{DynamicResource font}" />
        <Setter Property="FontWeight" Value="{DynamicResource Weight}" />
        <Setter Property="FontStyle" Value="{DynamicResource Style}" />
    </Style>

</ResourceDictionary>