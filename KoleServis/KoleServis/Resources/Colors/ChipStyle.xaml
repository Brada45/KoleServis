<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="materialDesign:Chip">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonForegroundBrush}" />
        <Setter Property="FontFamily" Value="{DynamicResource font}" />
        <Setter Property="FontWeight" Value="{DynamicResource Weight}" />
        <Setter Property="FontStyle" Value="{DynamicResource Style}" />
        <Setter Property="materialDesign:Chip.IconBackground" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="materialDesign:Chip.IconForeground" Value="{DynamicResource ButtonForegroundColor}"/>
    </Style>
</ResourceDictionary>
