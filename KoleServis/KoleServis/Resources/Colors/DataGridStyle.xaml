<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Stil za DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="FontFamily" Value="{DynamicResource font}" />
        <Setter Property="FontStyle" Value="{DynamicResource Style}" />
        <Setter Property="FontWeight" Value="{DynamicResource Weight}" />
        <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="RowBackground" Value="White" />
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource ButtonBackgroundBrush}" />
    </Style>

    <!-- Stil za DataGridTextColumn -->
    <Style TargetType="DataGridCell">
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
        <Setter Property="FontFamily" Value="{DynamicResource font}" />
        <Setter Property="FontStyle" Value="{DynamicResource Style}" />
        <Setter Property="FontWeight" Value="{DynamicResource Weight}" />
    </Style>
</ResourceDictionary>
